rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura pública dos sites dos clientes, mas escrita apenas para administradores
    match /clientes/{clienteId} {
      allow read: if true;
      allow write: if request.auth != null; // Apenas usuários autenticados
    }

    // Outras coleções (ex: usuários, templates) devem ter regras mais restritas
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}