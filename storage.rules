rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite leitura por qualquer pessoa (para o site público ver as imagens)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Permite escrita (upload, delete) apenas para usuários autenticados
    match /site/{clientId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}