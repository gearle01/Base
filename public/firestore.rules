rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /site/{clientId} {
      allow read: if true;
      allow write: if request.auth != null;

      match /{subcollection}/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
  }
}